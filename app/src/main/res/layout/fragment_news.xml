<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zl.third.brother.widghts.MarqueeTextView
        android:id="@+id/tv_marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="53dp"
        android:background="@color/app_color"
        android:ellipsize="none"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="5dp"
        android:singleLine="true"
        android:text="新年好啊 新年好啊   祝福大家新年好，我们唱歌 我们跳舞................."
        android:textColor="@color/all_night"
        tools:layout_editor_absoluteX="65dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_constraintLayout"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/app_color"
        android:gravity="center"
        android:text="ConstraintLayout" />

    <TextView
        android:id="@+id/tv_card_view_new"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/distance_space5"
        android:background="@color/app_color"
        android:gravity="center"
        android:text="CardView" />

</LinearLayout>
